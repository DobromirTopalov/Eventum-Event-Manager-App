extends ../_layout

block content
  section.hero-area.bgimage
    .bg_image_holder(style='background-image: url("/static/images/bg/home-bg1.jpg"); opacity: 1;')
      img(src='https://image.ibb.co/bzijqS/69424863_event_wallpapers.jpg', alt='bgimg')
    .hero-content.content_above
      .content-wrapper
        .container
          .row
            .col-md-12
              .hero__content__title
                h1
                  span.light Looking for event near to you
                  span.bold 
                    span.color-logo E
                    |ventum is all you need
    .search-area
      .container
        .row
          .col-sm-12
            .search_box
              form(action='#')
                input.text_field(type='text', name='keywords', placeholder='Search for events...')
                .search__select.select-wrap
                  select#blah.select--field(name='category')
                    option(value='') All Categories
                    option(value='') PSD
                    option(value='') HTML
                    option(value='') WordPress
                    option(value='') All Categories
                  span.lnr.lnr-chevron-down
                .search__select.select-wrap
                  select#blah.select--field(name='city')
                    option(value='') City
                    option(value='') PSD
                    option(value='') HTML
                    option(value='') WordPress
                    option(value='') All Categories
                  span.lnr.lnr-chevron-down 
                button.search-btn.btn--lg Search Now

