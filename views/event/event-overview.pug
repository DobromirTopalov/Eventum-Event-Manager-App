extends ../_layout
//- include ../_mixins/_navigation
//- include ../_mixins/_footer


block content
    -var covephoto = 'url("/static/images/uploads/' + event.coverPhoto + '");';
    section.job_hero_area.event_detail_breadcrumb.bgimage
        .bg_image_holder(style='background-image: '+ covephoto + ' opacity: 1;')
            img(src='/static/images/uploads/' + event.coverPhoto)
            |         
        .container.content_above
            .row
                .col-md-9
                    .job_hero_content
                        h1 #{event.title}
                        |                         
                        .job_date
                            p
                                span.lnr.lnr-map-marker
                                |  #{event.date}
                            |                             
                            p
                                span.lnr.lnr-calendar-full
                                |  #{event.location} #{event.city}
                    a.btn.btn--round.btn--lg(href='#') Signup Now
                .col-md-3
                    .single_speaker
                        .speaker__thumbnail
                            img(src='/static/images/' + event.authorPhoto, width='225px')
                            |                                 
                        .speaker_social
                            ul
                            if event.socialFb
                                li
                                    a(href='' + event.socialFb)
                                    span.fa.fa-facebook
                                |                                             
                            if event.socialTwt
                                li
                                    a(href='' + event.socialTwt)
                                        span.fa.fa-twitter
                                |              
                                if event.socialGgl                               
                                    li
                                        a(href='' + event.socialGgl)
                                            span.fa.fa-google-plus
                                    |                                     

    section.event_details.section--padding
        .container
            .row
                .col-md-8
                    .event_module
                        h4.event_module__title Event Overview
                        |                         
                        p
                            | #{event.description}  
                        |                         
                        ul.list_item
                            li #{event.country}
                            |                             
                            li #{event.city}
                            |                             
                            li #{event.location}
                            |
                            li #{event.hours}
                        |                         
                        ul.list_item
                            li #{event.placename}
                            |                             
                            li #{event.category}:
                            each subcategory in event.subcategories
                                | #{subcategory} ,
                .col-md-4
                    aside.sidebar.sidebar--single-product
                        .sidebar-card.card-pricing
                            .price
                                | Price:
                                h1
                                    sup $
                                    | #{event.price} 
                                | Tickets left:
                                h1  
                                    | #{event.capacity}
                                |                             
                            
                            .purchase-button
                                a.btn.btn--lg.btn--round(href='/checkout') Purchase Now
                                |                                 
            .row
                .col-md-8.col-md-offset-2
                    .tab-content
                        #product-details.fade.tab-pane.product-tab
                        .tab-content-wrapper
                        #product-comment.fade.tab-pane.product-tab.active.in
                            .thread
                                ul.media-list.thread-list
                                each comment in comments                                                 
                                    li.single-thread.depth-2
                                        .media
                                            .media-left
                                                a(href='#')
                                                img.media-object(src='/static/images/' + comment.img, alt='Commentator Avatar')
                                            |                                                         
                                            .media-body
                                                .media-heading
                                                    h4 #{comment.owner}
                                                    |                                                                 
                                                    span #{comment.date}
                                                |                                                             
                                                p
                                                    | #{comment.content}  
                                    
                .pagination-area.pagination-area2
                    nav.navigation.pagination(role='navigation')
                        .nav-links
                            a.page-numbers.current(href='#') 1
                            |                                                 
                            a.page-numbers(href='#') 2
                            |                                                 
                            a.page-numbers(href='#') 3
                            |                                                 
                            a.next.page-numbers(href='#')
                                span.lnr.lnr-arrow-right

                .comment-form-area
                    h4 Leave a comment
                        // comment reply
                        .media.comment-form                                             
                            .media-body
                                form.comment-reply-form(action='#')
                                    textarea(name='reply-comment', placeholder='Write your comment...')
                                    |                                                     
                                    button.btn.btn--sm.btn--round Post Comment
                                // comment reply