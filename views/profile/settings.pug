extends ../_layout
include ../_mixins/_userSettings
include ../_mixins/_artistSettings

block content

  .dashboard-area
    .dashboard_contents
      .container
          .row
            .col-md-12
              .dashboard_title_area
                .dashboard__title
                  h3 Account Settings
          form.setting_form(action='#')
            .row
              .col-md-6
                .information_module
                  a.toggle_title(href='#collapse2', role='button', data-toggle='collapse', aria-expanded='false', aria-controls='collapse1')
                    h4
                      | Personal Information 
                      span.lnr.lnr-chevron-down
                  |                                 
                  #collapse2.information__set.toggle_module.collapse.in
                    .information_wrapper.form--fields
                      //- if (obj === user) {
                      //-   +user-settings-personalInfo(obj)
                      //- } else {
                            +artist-settings-personalInfo(obj)
                      //- }
                      +artist-settings-personalInfo(obj)
              .col-md-6
                .information_module
                  a.toggle_title(href='#collapse3', role='button', data-toggle='collapse', aria-expanded='false', aria-controls='collapse1')
                    h4
                      | Profile Image &amp; Cover 
                      span.lnr.lnr-chevron-down
                  |                                 
                  #collapse3.information__set.profile_images.toggle_module.collapse
                    .information_wrapper
                      .profile_image_area
                        img(src='static/images/authplc.png', alt='Author profile area')
                        |                                             
                        .img_info
                          p.bold Profile Image
                          |                                                 
                          p.subtitle JPG, GIF or PNG 100x100 px
                        |                                             
                        label.upload_btn(for='cover_photo')
                          input#cover_photo(type='file')
                          |                                                 
                          span.btn.btn--sm.btn--round(aria-hidden='true') Upload Image
                      |                                         
                      .prof_img_upload
                        p.bold Cover Image
                        |                                             
                        img(src='static/images/cvrplc.jpg', alt='The great warrior of China')
                        |                                             
                        .upload_title
                          p JPG, GIF or PNG 750x370 px
                          |                                                 
                          label.upload_btn(for='dp')
                            input#dp(type='file')
                            |                                                     
                            span.btn.btn--sm.btn--round(aria-hidden='true') Upload Image
              .col-md-6
                .information_module
                  a.toggle_title(href='#collapse5', role='button', data-toggle='collapse', aria-expanded='false', aria-controls='collapse1')
                    h4
                      | Social Profiles 
                      span.lnr.lnr-chevron-down
                  |                                 
                  #collapse5.information__set.social_profile.toggle_module.collapse
                    .information_wrapper
                      .social__single
                        .social_icon
                          span.fa.fa-facebook
                        |                                             
                        .link_field
                          input.text_field(placeholder='ex: www.facebook.com/aazztech', type='text')
                      .social__single
                        .social_icon
                          span.fa.fa-twitter
                        |                                             
                        .link_field
                          input.text_field(placeholder='ex: www.twitter.com/aazztech', type='text')
                      .social__single
                        .social_icon
