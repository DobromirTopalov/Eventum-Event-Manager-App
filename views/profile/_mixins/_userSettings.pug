mixin user-settings-personalInfo()
    .form-group
        label(for='acname') Account Name
        |
        sup *
        |                                             
        input#acname.text_field(placeholder='Name Surname', name='fullname', value='' + fullname, type='text')
    |                                         
    .form-group
        label(for='usrname') Username
        | 
        sup *
        |                                             
        input#usrname.text_field(placeholder='Account name', name='username', value='' + username, type='text')
        |                                             
        p
        | Your Eventum URL: https://eventum.com/
        span #{username}
    |                                         
    .form-group
        label(for='emailad') Email Address
        | 
        sup *
        |                                             
        input#emailad.text_field(placeholder='contact@somemail.com', name='email', value='' + email, type='text')
    |                                         
    .col-md-6
        .form-group
            label(for='password') New Password 
            |
            sup *
            |                                                     
            input#password.text_field(placeholder='enter new password', name='passwordMain', value='' + passwordMain, type='password')
        |                                             
    .col-md-6
        .form-group
            label(for='conpassword') Confirm New Password
            |  
            sup *
            |                                                     
            input#conpassword.text_field(placeholder='re-enter new password', name='passwordSecondary', value='' + passwordSecondary type='password')
    |                                         
    .form-group
            label(for='country')
            | Country 
            sup *
            |                                             
            .select-wrap.select-wrap2
                select#country.text_field(name='country')
                    option(selected='selected') #{country}
                    option(value='') Select one
                    |                                                     
                    option(value='bangladesh') Bangladesh
                    |                                                     
                    option(value='india') India
                    |                                                     
                    option(value='uruguye') Uruguye
                    |                                                     
                    option(value='australia') Australia
                    |                                                     
                    option(value='neverland') Neverland
                    |                                                     
                    option(value='atlantis') Atlantis
                |                                                 
                span.lnr.lnr-chevron-down
            |

mixin user-settings-emailSettings()
    .custom_checkbox
        .custom_checkbox
            input#mailopt1(name='mailOnReview', type='checkbox' checked=mailOnReview)
            |                                             
            label(for='mailopt1')
                span.shadow_checkbox
                |                                                 
                span.radio_title Buyer Review Notifications
                |                                                 
                span.desc Send me an email when someone leaves a review with their rating        
        .custom_checkbox
            input#mailopt2(name='mailOnUpdates', type='checkbox' checked=mailOnUpdates)
            |                                             
            label(for='mailopt2')
                span.shadow_checkbox
                |                                                 
                span.radio_title eventum Newsletter
                |                                                 
                span.desc Get update about latest news, update and more.    