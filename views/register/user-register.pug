extends ../_layout
include ../_mixins/_termsConditions

block content

    section.signup_area.section--padding2
        .container  
            .row
                .col-md-6.col-md-offset-3
                    form(action='#')
                        .cardify.signup_form
                            .login--header
                                h3 Create Your Account
                                |                                 
                                p
                                    | Please fill the following fields with appropriate information
                                    | to register a new user account.
    
                            .login--form
                                .form-group
                                    label(for='urname') Your Name
                                    |                                     
                                    input#urname.text_field(placeholder='Enter your Name', type='text')
                                |                                 
                                .form-group
                                    label(for='email_ad') Email Address
                                    |                                     
                                    input#email_ad.text_field(placeholder='Enter your email address', type='text')
                                |                                 
                                .form-group
                                    label(for='user_name') Username
                                    |                                     
                                    input#user_name.text_field(placeholder='Enter your username...', type='text')
                                |                                 
                                .form-group
                                    label(for='password') Password
                                    |                                     
                                    input#password.text_field(placeholder='Enter your password...', type='password')
                                |                                 
                                .form-group
                                    label(for='con_pass') Confirm Password
                                    |                                     
                                    input#con_pass.text_field(placeholder='Confirm password', type='password')
                                div.custom-checkbox2
                                    input#opt1(name='filter_opt', type='checkbox')  
                                    label(for='opt1')
                                        span.circle
                                        | I have read and agree to the 
                                        a(href='#', data-target='#myModal2', data-toggle='modal')
                                            | terms and conditions
                                button.btn.btn--md.btn--round.register_btn(type='submit') Next
                                |                                 
                                .login_assist
                                    p
                                        | Already have an account? 
                                        a(href='/login') Login
        +terms-conditions(artist)
