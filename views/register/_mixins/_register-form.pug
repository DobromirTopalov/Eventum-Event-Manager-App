mixin reg-form(userType)
    section.signup_area.section--padding2
        .container
            .row
                .col-md-6.col-md-offset-3
                    form
                        .cardify.signup_form
                            .login--header
                                h3 Create Your Account
                                |                                 
                                p
                                    | Please fill the following fields with appropriate information
                                    | to register a new #{userType} account.
    
                            #userForm.login--form
                                .form-group
                                    label(for='urname') Your Name
                                    |                                     
                                    input#urname.text_field(placeholder='Enter your Name', name='urname', type='text')
                                |                                 
                                .form-group
                                    label(for='email_ad') Email Address
                                    |                                     
                                    input#email_ad.text_field(placeholder='Enter your email address', name='email' type='text')
                                |                                 
                                .form-group
                                    label(for='user_name') Username
                                    |                                     
                                    input#user_name.text_field(placeholder='Enter your username...', name ='username', type='text')
                                |                                 
                                .form-group
                                    label(for='password') Password
                                    |                                     
                                    input#password.text_field(placeholder='Enter your password...', name='password' type='password')
                                |                                 
                                .form-group
                                    label(for='con_pass') Confirm Password
                                    |                                     
                                    input#con_pass.text_field(placeholder='Confirm password', name='passwordRepeat' type='password')
                                div.custom-checkbox2
                                    input#opt1(name='filter_opt', type='checkbox')  
                                    label(for='opt1')
                                        span.circle
                                        | I have read and agree to the 
                                        a(href='#', data-target='#myModal2', data-toggle='modal')
                                            | terms and conditions
                                button.btn.btn--md.btn--round.register_btn(type='button') Next
                                |                                 
                                .login_assist
                                    p
                                        | Already have an account? 
                                        a(href='/login') Login