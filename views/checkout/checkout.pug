extends ../_layout

block content
    section.dashboard-area
        .dashboard_contents
            .container
                form.setting_form(action='#')
                    .row
                        .col-md-6
                            .information_module
                                .toggle_title
                                    h4 Biling Information 
                                |                                 
                                .information__set
                                    .information_wrapper.form--fields
                                        .row
                                            .col-md-6
                                                .form-group
                                                    label(for='first_name')
                                                        | First Name 
                                                        sup *
                                                    |                                                     
                                                    input#first_name.text_field(placeholder='First Name', value='', name='firstname', type='text')
                                            |                                             
                                            .col-md-6
                                                .form-group
                                                    label(for='last_name')
                                                        | Last Name 
                                                        sup *
                                                    |                                                     
                                                    input#last_name.text_field(placeholder='Last Name', value='', name='lastname', type='text')
                                            // end /.row
                                        .form-group
                                            label(for='email')
                                                | Company Name
                                                sup *
                                            |                                             
                                            input#email.text_field(placeholder='Eventum', value='', name='company', type='text')
                                        |                                         
                                        .form-group
                                            label(for='email1')
                                                | Email Adress 
                                                sup *
                                            |                                             
                                            input#email1.text_field(placeholder='Email address', value='contact@somemail.com', name='email', type='text')
                                        |                                         
                                        .form-group
                                            label(for='country1')
                                                | Country 
                                                sup *
                                            |                                             
                                            .select-wrap.select-wrap2
                                                select#country1.text_field(name='country')
                                                    option(value='') Select one
                                                    |                                                     
                                                    option(value='bangladesh') Bangladesh
                                                    |                                                     
                                                    option(value='india') India
                                                    |                                                     
                                                    option(value='uruguye') Uruguye
                                                    |                                                     
                                                    option(value='australia') Australia
                                                    |                                                     
                                                    option(value='neverland') Neverland
                                                    |                                                     
                                                    option(value='atlantis') Atlantis
                                                |                                                 
                                                span.lnr.lnr-chevron-down
                                            |                                         
                                            .form-group
                                                label(for='address1') Address Line 1
                                                |                                             
                                                input#address1.text_field(placeholder='Address line one', name='addressLineOne', type='text')
                                            |                                         
                                            .form-group
                                                label(for='address2') Address Line 2
                                                |                                             
                                                input#address2.text_field(placeholder='Address line two', name='addressLineTwo', type='text')
                                            |                                         
                                            .row
                                                .col-md-6
                                                    .form-group
                                                        label(for='city')
                                                            | City / State 
                                                            sup *
                                                    |                                                     
                                                    .select-wrap.select-wrap2
                                                        select#city.text_field(name='city')
                                                            option(value='') Select one
                                                            |                                                             
                                                            option(value='dhaka') Dhaka
                                                            |                                                             
                                                            option(value='sydney') Sydney
                                                            |                                                             
                                                            option(value='newyork') New York
                                                            |                                                             
                                                            option(value='london') London
                                                            |                                                             
                                                            option(value='mexico') New Mexico
                                                        |                                                         
                                                        span.lnr.lnr-chevron-down
                                                |                                             
                                                .col-md-6
                                                    .form-group
                                                        label(for='zipcode')
                                                            | Zip / Postal Code 
                                                            sup *
                                                        |                                                     
                                                        input#zipcode.text_field(placeholder='zip/postal code', name='zipcode', type='text')
                                    // end /.information__set
                                // end /.information_module
                            // end /.col-md-6
                        .col-md-6
                            .information_module.order_summary
                                .toggle_title
                                    h4 Order Summary
                                |                                 
                                ul
                                    li.item
                                        a(href='single-product.html', target='_blank') Event ticket 1
                                        span $20.00
                                    |                                     
                                    li.item
                                        a(href='single-product.html', target='_blank') Event ticket 2
                                        span $60.00
                                    |                                     
                                    li
                                        p Pants &amp; 3 x T-Shirt items:
                                        span $12.00
                                    |                                     
                                    li.total_ammount
                                        p Total
                                        span $92.00
                            // end /.information_module
                            .information_module.payment_options
                                .toggle_title
                                    h4 Select Payment Method
                                |                                 
                                ul
                                    li
                                        .custom-radio
                                            input#opt1(name='filter_opt', name='paymentMethod1',type='radio')
                                            |                                             
                                            label(for='opt1')
                                                span.circle
                                                | Credit Card
                                            |                                         
                                            img(src='images/cards.png', alt='Visa Cards')
                                        |                                     
                                    li
                                        .custom-radio
                                            input#opt2(name='filter_opt', name='paymentMethod2', type='radio')
                                            |                                             
                                            label(for='opt2')
                                                span.circle
                                                | Paypal
                                            |                                         
                                            img(src='images/paypal.png', alt='Visa Cards')
                                        |                                     
                                    li
                                        .custom-radio
                                            input#opt3(name='filter_opt', name='paymentMethod3', type='radio')
                                            |                                             
                                            label(for='opt3')
                                                span.circle
                                                | Martplace Credit
                                        |                                         
                                        p
                                            | Balance 
                                            span.bold $180
                                |                                 
                                .payment_info.modules__content
                                    .form-group
                                        label(for='card_number') Card Number
                                        |                                         
                                        input#card_number.text_field(placeholder='Enter your card number here...', name='cardnumber', type='text')
                                    // lebel for date selection
                                    label(for='name') Expire Date
                                    |                                     
                                    .row
                                        .col-md-6.col-sm-6
                                            .form-group
                                                .select-wrap.select-wrap2
                                                    select#name(name='months')
                                                        option(value='') Month
                                                        |                                                         
                                                        option(value='jan') jan
                                                        |                                                         
                                                        option(value='feb') Feb
                                                        |                                                         
                                                        option(value='mar') Mar
