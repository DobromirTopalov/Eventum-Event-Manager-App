                                                        option(value='jul') Jul
                                                        |                                                         
                                                        option(value='aug') Aug
                                                        |                                                         
                                                        option(value='sep') Sep
                                                        |                                                         
                                                        option(value='oct') Oct
                                                        |                                                         
                                                        option(value='nov') Nov
                                                        |                                                         
                                                        option(value='dec') Dec
                                                    |                                                     
                                                    span.lnr.lnr-chevron-down
                                        .col-md-6.col-sm-6
                                            .form-group
                                                .select-wrap.select-wrap2
                                                    select#years(name='years')
                                                        option(value='') Year
                                                        |                                                         
                                                        option(value='28') 2028
                                                        |                                                         
                                                        option(value='27') 2027
                                                        |                                                         
                                                        option(value='26') 2026
